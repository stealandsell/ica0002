global:
  scrape_interval:     15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: prometheus
    metrics_path: '/prometheus/metrics'
    static_configs:
      - targets: 
           - {{localhost}}:9090

  - job_name: linux
    static_configs:
      - targets:
          {% for vm in groups['all'] %}
           - {{ hostvars[vm]['inventory_hostname'] }}:9100
          {% endfor %}
